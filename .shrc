PS1='$ '
PS2='> '
PS3='#? '
PS4='+ '
export PS1 PS2 PS3 PS4

set -o emacs

umask 022

unalias -a

# FreeBSD defaults
alias h="fc -l"
alias j=jobs
alias m="$PAGER"
alias ll="ls -laFo"
alias l="ls -l"
alias g="egrep -i"

# mine
alias ali=". $ENV"
alias cdup="cd .."
alias cls=clear
alias dir=ls
alias lk="ls -l | grep ^d"
alias r="fc -e -"

alias fixperms="chmod -R go-rwx $HOME/.ssh $HOME/mail"

UNAME=`uname 2> /dev/null`
if [ "$UNAME" = "windows32" ]
then
	alias find=gfind
	alias sort=gsort
	alias open=start
	alias ps=tasklist
	alias vi=vim
fi
unset UNAME

if ! echo "$SHELL" | grep -q ksh
then
	if whereis whereis > /dev/null 2>&1
	then
		alias whence="whereis -qb"
	fi
fi

if [ "`hostname 2> /dev/null`" = "sdf" ]
then
	alias git="$HOME/pkg/git/bin/git --exec-path=$HOME/pkg/git/libexec/git-core"
fi

FORTUNES="/usr/pkg/games/fortune /usr/games/fortune"
for i in `echo $FORTUNES`
do
	if [ -x $i ]
	then
		$i
		break
	fi
done
unset i FORTUNES

