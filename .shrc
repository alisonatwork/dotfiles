set -o emacs

umask 022

unalias -a

alias ali=". $ENV"
alias cd..="cd .."
alias cdup="cd .."
alias cls=clear
alias dir=ls
alias h="fc -l"
alias j=jobs
alias l="$PAGER"
alias lk="ls -l | grep ^d"
alias ll="ls -l"
alias r="fc -e -"

alias fixperms="chmod -R go-rwx $HOME/.ssh $HOME/mail"

case "$SHELL" in
	*ksh*)
	;;
	*)
		if whereis -qb whereis > /dev/null 2>&1
		then
			alias whence="whereis -qb"
		fi
	;;
esac

case "`uname 2> /dev/null`" in
	windows32)
		alias find=gfind
		alias ifconfig=ipconfig
		alias sort=gsort
		alias ps=tasklist
		alias vi=vim
	;;
	*)
	;;
esac

case "`hostname 2> /dev/null`" in
	sdf)
		alias git="git --exec-path=$HOME/pkg/git/libexec/git-core"
	;;
	*)
	;;
esac

